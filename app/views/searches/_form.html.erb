<form action="<%= scrapbook_search_path %>" method="GET" id="search-form">
  <div class="form-group">
    <label class="form-label" for="query">
      <span class="heading-small">Work, skills and interests</span>
    </label>
    <input type="text" name="query" id="query" class="form-control"
           title="Work, skills and interests"
           value="<%= local_assigns[:search_term] %>">
  </div>

  <div class="form-group">
    <input type="submit" class="button" value="Search">
  </div>
</form>
