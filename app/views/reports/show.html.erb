<header>
  <h2 class="heading-xlarge">Your work search activities</h2>
</header>

<% if @notice %>
  <div id="success" class="error-summary information-box" role="group">
    <p class="heading-medium error-summary-heading">
      <%= @notice %>
    </p>
  </div>
<% end %>

<div class="grid-row">

  <div class="column-one-half">
    <% if @report.unique_actions.any? %>
      <% @report.unique_actions.each do |action| %>
        <p class="heading-small"><%= action.title %></p>
        <ul class="list list-bullet">
          <% @report.accepted_occupations_for_action_type(action.action_type).each do |occ| %>
            <li><%=occ.title%></li>
          <% end %>
        </ul>
      <% end %>
    <% else %>
      <p class="heading-small">You have not selected any work search activities.</p>
    <% end %>
  </div>

  <div class="column-one-half">
    <% if @report.accepted_occupations.any? %>
      <p class="heading-small"><%=pluralize_without_count(@report.accepted_occupations.count, "Job")%> you found interesting in this session</p>
      <ul class="list list-bullet">
        <% @report.accepted_occupations.each do |occupation| %>
          <li><%=occupation.title%></li>
          <% unless occupation.notes.blank? %>
            <div class="panel panel-border-wide">
              <p>
                <%=occupation.notes %>
              </p>
            </div>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p class="heading-small">You have not selected any occupations.</p>
      <a href="<%=root_url%>" class="button button-large">Start again</a>
    <% end %>
  </div>

</div>

<hr>

<div class="grid-row">

  <div class="column-one-half">
    <p class="heading-small"><%=pluralize_without_count(@report.keywords.count, "Keyword")%> you have searched for</p>
    <ul class="list list-bullet">
      <% @report.keywords.each do |keyword| %>
        <li><%=keyword.keyword%></li>
      <% end %>
    </ul>
  </div>

  <div class="column-one-half">
    <% if @report.unaccepted_occupations.any? %>
      <p class="heading-small"><%=pluralize_without_count(@report.unaccepted_occupations.count, "Occupation")%> you have not found interesting</p>
      <ul class="list list-bullet">
        <% @report.unaccepted_occupations.each do |occupation| %>
          <li><%=occupation.title%></li>
          <% unless occupation.notes.blank? %>
            <div class="panel panel-border-wide">
              <p>
                <%=occupation.notes %>
              </p>
            </div>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>

</div>

<hr>
<p class="heading-small email-help">Send this to your email account so you can refer to it later.</p>
<%= form_for @report, url: email_report_url(@report), method: "post" do %>
  <fieldset class="form-fieldset">
    <div class="form-group <% if @error %>error<% end %>">
      <label class="form-label" for="email">
        <span class="form-label<% if @error %>-bold<% end %>">Email address</span>
        <% if @error %>
          <span class="error-message"><%= @error %></span>
        <% end %>
      </label>
      <%= email_field_tag "email", nil, class: 'form-control' %>
      <input type="submit" class="button" value="Send">
    </div>
  </fieldset>
<% end %>
<p class="heading-small">Save this link to your journal so that you and your work coach can refer to it later.</p>
<div class="form-label"><%=root_url+@report.guid%></div>
<hr>

<h2 class="heading-xlarge">Work you could do</h2>

<% @report.accepted_occupations.each do |occupation| %>
  <section id="<%=occupation.id%>">
    <%= render partial: "occupation", locals: { occupation: occupation } %>
    <hr>
  </section>
<% end %>

<footer>
  <a href="<%=root_url%>" class="link-back">start again</a>
</footer>
