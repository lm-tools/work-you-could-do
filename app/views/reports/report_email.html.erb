<header>
  <h2 class="heading-xlarge">Your work search activities</h2>
</header>

<p class="heading-small">You have highlighted <%=@report.accepted_occupations.count%>
job <%=pluralize_without_count(@report.accepted_occupations.count, "description")%> you found interesting.</p>
<ul class="list list-bullet">
<% @report.accepted_occupations.each do |occupation| %>
  <li><%=occupation.title%></li>
<% end %>
</ul>

<% @report.unique_actions.each do |action| %>
  <p class="heading-small"><%= action.title %></p>
  <ul class="list list-bullet">
    <% @report.accepted_occupations_for_action_type(action.action_type).each do |occ| %>
      <li><%=occ.title%></li>
      <% if action.action_type == "notes" %>
        <pre><%=action.notes %></pre>
      <% end %>
    <% end %>
  </ul>
<% end %>
<hr>

<h2 class="heading-xlarge">Work you could do</h2>

<% @report.accepted_occupations.each do |occupation| %>
  <section>
    <div class="job_item">
      <header>
        <h2 class="heading-large"><%= occupation.title %></h2>
      </header>

      <p><%= occupation.description %></p>

      <div class="grid-row">
        <div class="column-half">
          <h3 class="heading-small">Your typical pay and hours</h3>
          <ul>
            <li><%= occupation.week_hours %> hours a week</li>
            <li>£<%= occupation.week_pay %> a week</li>
          </ul>
        </div>
        <div class="column-half">
          <h3 class="heading-small">Qualifications you'll need</h3>
          <p><%= occupation.qualifications %></p>
        </div>
      </div>

      <div class="grid-row">
        <div class="column-half">
         <h3 class="heading-small">Kind of work you’d do</h3>
          <ul class="list-bullet">
            <% formatted_tasks(occupation.tasks).each do |task| %>
              <li><%=task%></li>
            <% end %>
          </ul>
        </div>

        <div class="column-half">
          <h3 class="heading-small">Words to use in your online search</h3>
          <em><%= occupation.additional_titles %></em>
        </div>
      </div>
    </div>

    <hr>
  </section>
<% end %>

