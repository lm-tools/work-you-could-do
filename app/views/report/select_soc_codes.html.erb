<div class="grid-row full-width">
  <div class="column-two-thirds">
    <h2 class="bold-large">Results</h2>
  </div>
  <div class="column-one-third">
    <p>
      <a href="<%=root_url%>" class="right">Change search</a>
    </p>
  </div>
</div>

<p class="lede">These are some job roles related to your search.</p>

<%= form_tag(controller: "report", action: "save_soc_codes")%>
  <% if @error %>
    <div class="form-group error">
      <span class="error-message">
        <ul class="errorlist nonfield">
          <li><%=@error%></li>
        </ul>
      </span>
    </div>
  <% end %>
  <% @keywords.each do |keyword| %>
    <section>
      <fieldset class="form-group">
        <h3 class="bold-medium job-description-title">Jobs related to ‘<%=keyword.keyword%>‘</h3>
        <% keyword.occupations.each do |occupation| %>
          <label class="block-label">
            <%= check_box_tag "occupation_#{occupation.id}" %>
            <h4 class="bold-small"><%= occupation.title %></h4>
            <p><%= occupation.description %></p>
          </label>
        <% end %>
      </fieldset>
    </section>
  <% end %>

  <div class="form-group">
    <button type=submit class=button>Next</button>
  </div>
</form>

<footer>
  <a href="<%=root_url%>" class="link-back">start again</a>
</footer>
