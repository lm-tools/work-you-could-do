{
  "name": "work-you-could-do",
  "scripts": {
    "postdeploy": "bin/rake db:setup"
  },
  "env": {
    "EMAIL_SENDER"             : { "required" : true  },
    "GOOGLE_TAG_MANAGER_ID"    : { "required" : true  },
    "LANG"                     : { "required" : true  },
    "RACK_ENV"                 : { "required" : true  },
    "RAILS_ENV"                : { "required" : true  },
    "RAILS_SERVE_STATIC_FILES" : { "required" : true  },
    "SECRET_KEY_BASE"          : { "required" : true  }
  },
  "addons": [
    "heroku-postgresql",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "urn:buildpack:heroku/ruby"
    }
  ]
}
