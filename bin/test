#!/usr/bin/env ruby
require 'pathname'

APP_ROOT = Pathname.new(File.expand_path('../../',  __FILE__))

def heading(heading)
  puts "-" * 72
  puts heading
  puts "-" * 72
end

Dir.chdir APP_ROOT do
  heading "Linting ruby"
  system("bin/rubocop")

  heading "Running RSpec tests"
  system("bin/rspec --color --format documentation")

  heading "Running Cucumber tests"
  system("bin/cucumber")
end
